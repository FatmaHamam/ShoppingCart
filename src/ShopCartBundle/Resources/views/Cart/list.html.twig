{% extends '::base.html.twig' %}

{% block title parent() ~ " - Cart - List" %}

{% block content %}

{% for cart in carts %}

    <h2>cart #{{ cart.id }}</h2>

    <dl>
        <dt>Description</dt>
        <dd>{{ cart.description }}<dd>

        <dt>Type</dt>
        <dd>{{ cart.type }}<dd>
    </dl>

    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in cart.items %}
            <tr>
                <td>{{ item.name  }}</td>
                <td>{{ item.description}}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.type }}</td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total</th>
                <td>{{ cart.totalprice }}</td>
            </tr>
        </tfoot>
    </table>

    <a href="{{ path("cart_show", {"id": cart.id}) }}">Show</a>
    <li>
            <a href="{{ path("shop_cart_cart_new") }}">AddItemtoCart</a>
        </li>

    <hr />

{% endfor %}

{% endblock %}