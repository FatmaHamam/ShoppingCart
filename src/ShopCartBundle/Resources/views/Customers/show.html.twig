{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Customers</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Customerid</th>
                <td>{{ entity.customerid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customers') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customers_edit', { 'id': entity.customerid }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
